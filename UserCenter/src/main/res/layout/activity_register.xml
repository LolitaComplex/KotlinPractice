<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical.Common">

    <android.support.design.widget.AppBarLayout style="@style/MatchWrap">

        <com.doing.kotlin.baselib.ui.widget.GeneralToolbar
            android:id="@+id/mToolbar"
            style="@style/GeneralToolbarStyle"
            app:commonTitle="注册"
            app:menu="@menu/register_menu"
            app:popupTheme="@style/ToolbarStyle"
            app:titleColor="@color/common_white"
            app:titleGravity="center"
            app:titleSize="16sp" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/border_corner_all">

        <LinearLayout style="@style/MatchWrap.Horizontal">

            <EditText
                android:id="@+id/mEtMobile"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_line_height"
                android:layout_weight="1.0"
                android:background="@null"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="@dimen/common_padding_small"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:paddingLeft="@dimen/common_padding_small" />

            <View style="@style/DividerFixedWidth.MarginTopBottom" />

            <com.kotlin.base.widgets.VerifyButton
                android:id="@+id/mBtnVerifyCode"
                style="@style/WrapMatch"
                android:background="@null"
                android:text="获取验证码"
                android:textColor="@color/common_blue" />
        </LinearLayout>

        <View style="@style/DividerFixedHeight" />

        <EditText
            android:id="@+id/mEtVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:background="@null"
            android:drawableLeft="@drawable/icon_verify_code"
            android:drawablePadding="@dimen/common_padding_small"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:paddingLeft="@dimen/common_padding_small" />

        <View style="@style/DividerFixedHeight" />

        <EditText
            android:id="@+id/mEtPwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:background="@null"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="@dimen/common_padding_small"
            android:hint="请输入密码（6-20位字母或数字）"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/common_padding_small" />

        <View style="@style/DividerFixedHeight" />

        <EditText
            android:id="@+id/mEtPwdConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:background="@null"
            android:drawableLeft="@drawable/icon_pwd"
            android:drawablePadding="@dimen/common_padding_small"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/common_padding_small" />
    </LinearLayout>

    <Button
        android:id="@+id/mBtnRegister"
        style="@style/FullBtnStyle"
        android:text="注册" />
</LinearLayout>
